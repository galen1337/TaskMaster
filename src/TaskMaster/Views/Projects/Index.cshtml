@model IEnumerable<Domain.Entities.Project>

<h2>Projects</h2>
<p>
	<a class="btn btn-primary" asp-action="Create">Create Project</a>
</p>
<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Owner</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var p in Model)
		{
			<tr>
				<td>@p.Name</td>
				<td>@p.Owner?.Email</td>
				<td>
					<div class="btn-group" role="group">
						<a class="btn btn-primary" asp-action="Details" asp-route-id="@p.Id">
							<i class="bi bi-arrow-right"></i> Open
						</a>
						<a class="btn btn-outline-secondary" asp-action="Settings" asp-route-id="@p.Id">
							<i class="bi bi-gear"></i> Settings
						</a>
					</div>
				</td>
			</tr>
		}
		</tbody>
	</table>
</div> 