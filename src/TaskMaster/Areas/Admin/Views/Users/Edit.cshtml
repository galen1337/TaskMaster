@model EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">@ViewData["Title"]</h4>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Users
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form method="post" asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" readonly />
                            <div class="form-text">Email cannot be changed from this interface.</div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="EmailConfirmed" class="form-check-input" type="checkbox" />
                                <label asp-for="EmailConfirmed" class="form-check-label">
                                    Email Confirmed
                                </label>
                            </div>
                            <div class="form-text">Check this to manually confirm the user's email address.</div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsAdmin" class="form-check-input" type="checkbox" />
                                <label asp-for="IsAdmin" class="form-check-label">
                                    Administrator
                                </label>
                            </div>
                            <div class="form-text">Grant or revoke administrator privileges for this user.</div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> Save Changes
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                            <div>
                                <form method="post" action="@Url.Action("Delete", new { id = Model.Id })" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                        <i class="bi bi-trash"></i> Delete User
                                    </button>
                                </form>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- User Information Card -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>User ID:</strong><br>
                            <code>@Model.Id</code>
                        </div>
                        <div class="col-md-6">
                            <strong>Current Status:</strong><br>
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Pending Email Confirmation</span>
                            }
                            
                            @if (Model.IsAdmin)
                            {
                                <span class="badge bg-info">Administrator</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 