@model IEnumerable<Domain.Entities.Project>

<h2>Projects</h2>
<p>
	<a class="btn btn-primary" asp-action="Create">Create Project</a>
</p>
<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Owner</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		@foreach (var p in Model)
		{
			<tr>
				<td>@p.Name</td>
				<td>@p.Owner?.Email</td>
				<td>
					<a class="btn btn-primary btn-lg" asp-action="Details" asp-route-id="@p.Id">
						Open <i class="bi bi-arrow-right"></i>
					</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
</div> 